<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Titre de l'application -->
    <context-param>
        <param-name>title</param-name>
        <param-value>Gestionnaire d'absences</param-value>
    </context-param>

    <!-- URLs communes aux vues -->
    <context-param>
        <param-name>header</param-name>
        <param-value>/WEB-INF/JSP/Common/header.jsp</param-value>
    </context-param>

    <context-param>
        <param-name>footer</param-name>
        <param-value>/WEB-INF/JSP/Common/footer.jsp</param-value>
    </context-param>

    <context-param>
        <param-name>layout</param-name>
        <param-value>/WEB-INF/JSP/Common/layout.jsp</param-value>
    </context-param>

    <!-- Servlet controleur -->
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>com.iut2.projet_java_morellej.controller.controller</servlet-class>
        <init-param>
            <param-name>urlIndex</param-name>
            <param-value>/WEB-INF/JSP/index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>urlDetails</param-name>
            <param-value>/WEB-INF/JSP/details.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>urlEtudiants</param-name>
            <param-value>/WEB-INF/JSP/etudiants.jsp</param-value>
        </init-param>
    </servlet>

    <!-- Mapping URL/Servlet -->
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/do/*</url-pattern>
    </servlet-mapping>

    <!--  fichiers d'accueil -->
    <welcome-file-list>
        <welcome-file>do</welcome-file>
    </welcome-file-list>

</web-app>
